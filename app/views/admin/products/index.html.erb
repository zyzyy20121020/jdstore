<div class="pull-right">
  <%= link_to("Add a product", new_admin_product_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-boldered">
  <thead>
    <tr>

      <td>商品名称</td>
      <td>商品图片</td>
      <td>商品描述</td>
      <td>价格</td>
      <td>库存</td>
      <td>操作</td>
      <td>创建时间</td>
    </tr>
  </thead>

  <% @products.each do |product| %>
  <tr>
    <td>
      <%= link_to(product.title, admin_product_path(product)) %>
    </td>
    <!-- <td>
      <%= product.image %>
    </td> -->
     <!-- <% if product.image.present? %>
       <%= image_tag(product.image.thumb.url) %>
     <% end %> -->

    <td>
      <%= product.description %>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= product.quantity %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_product_path(product)) %>
      <%= link_to("Destroy", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
    </td>
    <td>
      <%= product.created_at %>
    </td>
  </tr>
  <% end %>
</table>
